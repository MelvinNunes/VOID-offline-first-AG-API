{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
    },

    /* Additional Checks */
    "noUnusedLocals": true,                  /* Report errors on unused locals */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]  
}
